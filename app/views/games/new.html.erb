<h1>New Game</h1>
<div class="mb-4">
  <% @letters.each do |letter| %>
    <span class="letter-box"><%= letter %></span>
  <% end %>
</div>

<p class="lead">What is the longest word you can find?</p>

<%= form_with url: score_path, method: :post, data: { turbo: false }, class: "mt-3" do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join %>
  <div class="form-group">
    <%= text_field_tag :word, nil, class: "form-control", placeholder: "Your word..." %>
  </div>
  <%= submit_tag "Play", class: "btn btn-primary btn-play" %>
<% end %>

